		.header
		keyboard 50
		monitor 100
		random 200
		num 0
		total 4
		totalAvg 8
		kor 12
		eng 16
		average 20
		i 24
		.heap
		Student 30
		.code
		loada @keyboard
		storea @num
		loadc 0
		storea @total
		loadc 0
		storea @totalAvg
		loadc 0
		storea @i
start:
		loada @i
		suba @num
		gej end
		loada @random
		storea @kor
		loada @random
		storea @eng
		// kor
		hpush 4
		hloadc 0
		hstorea 0
		// eng
		hpush 4
		hloadc 0
		hstorea 4
		// sum
		hpush 4
		hloadc 0
		hstorea 8
		// set
		loadm @set
		spush 20
		loada @kor
		sstorea 8
		loada @eng
		sstorea 12
		sjump @set
		spop 20
		// add
		loadm @add
		spush 20
		sjump @add
		spop 20
		// avg
		loadm @avg
		spush 20
		sjump @avg
		sloada 0
		storea @average
		spop 20
		loada @average
		storea @monitor
		loada @total
		adda @avg
		storea @total
		loada @i
		addc 1
		storea @i
		jump start
end:	
		loada @total
		diva @num
		storea @totalAvg
		loada @totalAvg
		storea @monitor
		halt
set:
		sloada 8
		hstorea 0
		sloada 12
		hstorea 4
		sjump 4
add:
		hloada 0
		hadda 4
		hstorea 8
		sjump 4
avg:
		hloada 12
		hdivc 2
		sstorea 0
		sjump 4
.end